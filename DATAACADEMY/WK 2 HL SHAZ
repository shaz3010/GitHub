Task 3
def calculator(num_1, num_2):
    menuOption= input("please type the option you require)
if menuOption=='a':
    print (num_1+num_2)
elif menuOption=='b':
    print (num_1-num_2)
elif menuOption=='c':
    print (num_1*num_2)
elif menuOption=='d':
    print (num_1**num_2)
elif menuOption=='e':
    print (num_1/num_2)
elif menuOption=='f':
    print (num_1+-num_2)
    else: 
        print("input error please try again")

